{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": ["at any time"],
  "prHourlyLimit": 50,
  "automerge": false,
  "automergeType": "branch",
  "baseBranches": ["main"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
